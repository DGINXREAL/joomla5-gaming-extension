<?xml version="1.0" encoding="utf-8"?>
<form addfieldprefix="DGInxreal\Component\Games\Administrator\Field">
    <fieldset name="details">
        <field
            name="id"
            type="hidden"
            default="0"
        />

        <field
            name="name"
            type="text"
            label="COM_GAMES_FIELD_NAME_LABEL"
            required="true"
        />

        <field
            name="slug"
            type="text"
            label="COM_GAMES_FIELD_SLUG_LABEL"
            hint="COM_GAMES_FIELD_SLUG_HINT"
        />

        <field
            name="release_date"
            type="calendar"
            label="COM_GAMES_FIELD_RELEASE_DATE_LABEL"
            format="%Y-%m-%d"
            translateformat="false"
            showtime="false"
        />

        <field
            name="description"
            type="editor"
            label="COM_GAMES_FIELD_DESCRIPTION_LABEL"
            filter="safehtml"
            buttons="true"
        />

        <field
            name="developers"
            type="companies"
            label="COM_GAMES_FIELD_DEVELOPERS_LABEL"
            multiple="true"
        />

        <field
            name="publishers"
            type="companies"
            label="COM_GAMES_FIELD_PUBLISHERS_LABEL"
            multiple="true"
        />

        <field
            name="image"
            type="media"
            label="COM_GAMES_FIELD_IMAGE_LABEL"
        />

        <field
            name="is_approved"
            type="list"
            label="COM_GAMES_FIELD_IS_APPROVED_LABEL"
            default="0"
        >
            <option value="0">JNO</option>
            <option value="1">JYES</option>
        </field>

        <field
            name="state"
            type="list"
            label="JSTATUS"
            default="1"
        >
            <option value="1">JPUBLISHED</option>
            <option value="0">JUNPUBLISHED</option>
            <option value="-2">JTRASHED</option>
        </field>
    </fieldset>
</form>
