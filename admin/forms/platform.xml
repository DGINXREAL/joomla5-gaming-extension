<?xml version="1.0" encoding="utf-8"?>
<form>
    <fieldset name="details">
        <field
            name="id"
            type="hidden"
            default="0"
        />

        <field
            name="name"
            type="text"
            label="COM_GAMES_FIELD_NAME_LABEL"
            required="true"
        />

        <field
            name="slug"
            type="text"
            label="COM_GAMES_FIELD_SLUG_LABEL"
            hint="COM_GAMES_FIELD_SLUG_HINT"
        />

        <field
            name="abbreviation"
            type="text"
            label="COM_GAMES_FIELD_ABBREVIATION_LABEL"
        />

        <field
            name="company_id"
            type="sql"
            label="COM_GAMES_FIELD_COMPANY_LABEL"
            query="SELECT id, name FROM #__game_companies WHERE state = 1 ORDER BY name"
            key_field="id"
            value_field="name"
        >
            <option value="">- Select Company -</option>
        </field>

        <field
            name="released_at"
            type="calendar"
            label="COM_GAMES_FIELD_RELEASED_AT_LABEL"
            format="%Y-%m-%d"
            translateformat="false"
            showtime="false"
        />

        <field
            name="original_price"
            type="number"
            label="COM_GAMES_FIELD_ORIGINAL_PRICE_LABEL"
            step="0.01"
            min="0"
        />

        <field
            name="install_base"
            type="text"
            label="COM_GAMES_FIELD_INSTALL_BASE_LABEL"
        />

        <field
            name="online_support"
            type="list"
            label="COM_GAMES_FIELD_ONLINE_SUPPORT_LABEL"
            default="0"
        >
            <option value="0">JNO</option>
            <option value="1">JYES</option>
        </field>

        <field
            name="deck"
            type="textarea"
            label="COM_GAMES_FIELD_DECK_LABEL"
            rows="3"
            filter="string"
        />

        <field
            name="description"
            type="editor"
            label="COM_GAMES_FIELD_DESCRIPTION_LABEL"
            filter="safehtml"
            buttons="true"
        />

        <field
            name="image_id"
            type="media"
            label="COM_GAMES_FIELD_IMAGE_LABEL"
        />

        <field
            name="state"
            type="list"
            label="JSTATUS"
            default="1"
        >
            <option value="1">JPUBLISHED</option>
            <option value="0">JUNPUBLISHED</option>
            <option value="-2">JTRASHED</option>
        </field>
    </fieldset>
</form>
